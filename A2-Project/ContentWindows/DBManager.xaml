<Window x:Class="A2_Project.ContentWindows.DBManager"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:A2_Project.ContentWindows"
		mc:Ignorable="d"
		Title="DBManager" Width="1876" Height="1080" Background="#151515">
	<Grid Width="1876" Height="1080" VerticalAlignment="Center" HorizontalAlignment="Center">
		<Grid.Resources>
			<Style TargetType="Button">
				<Setter Property="VerticalAlignment" Value="Center"/>
				<Setter Property="HorizontalAlignment" Value="Center"/>
				<Setter Property="FontSize" Value="24"/>
			</Style>
		</Grid.Resources>
		<Button x:Name="btnResetDB" Content="Reset Database" Click="BtnResetDB_Click" Margin="0, 0, 0, 100"/>
		<Button x:Name="btnGenNewData" Content="Generate New Data" Click="BtnGenNewData_Click"/>
		<TextBox x:Name="tbxSeed" Text="Enter seed here" HorizontalAlignment="Center" FontSize="24" MinWidth="50" VerticalAlignment="Center" Margin="0, 100, 0, 0" PreviewTextInput="Tbx_OnlyAllowNumbers"/>
	</Grid>
</Window>
