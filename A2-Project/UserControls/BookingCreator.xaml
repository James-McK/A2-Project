<UserControl x:Class="A2_Project.UserControls.BookingCreator"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:A2_Project.UserControls"
			 mc:Ignorable="d">
	<Grid Background="#252525" Margin="2, 0, 2, 10">
		<StackPanel Orientation="Vertical" Margin="0, 5, 0, 0">
			<StackPanel Orientation="Horizontal">
				<Label Content="Book:" FontSize="24" Foreground="#F1F1F1"/>
				<ComboBox x:Name="cbxNewBookType" MinWidth="200" Margin="10, 0, 0, 0" FontSize="24" SelectionChanged="CbxNewBookType_SelectionChanged"/>
			</StackPanel>
			<StackPanel x:Name="stpContent" Orientation="Vertical" Margin="5">
			</StackPanel>
		</StackPanel>
		<Label Content="x" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0, -4, 0, 0" FontSize="24" Foreground="#F1F1F1" MouseDown="LblDelete_MouseDown"/>
	</Grid>
</UserControl>
