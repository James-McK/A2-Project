<UserControl x:Class="A2_Project.UserControls.ShiftException"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:A2_Project.UserControls"
			 mc:Ignorable="d" 
			 Background="#0B0B0B" Margin="5">
	<Grid Background="#151515">
		<StackPanel x:Name="stp" Orientation="Horizontal">
		</StackPanel>
		<StackPanel Orientation="Horizontal"  HorizontalAlignment="Right">
			<Button x:Name="btnSave" Content="Save Changes" FontSize="20" Margin="0, 0, 10, 0" Click="BtnSave_Click" Visibility="Collapsed"/>
			<Label Name="lblDelete" Content="x" Foreground="#F1F1F1" FontSize="20" MouseDown="LblDelete_MouseDown"/>
		</StackPanel>
	</Grid>
</UserControl>
