<UserControl x:Class="A2_Project.UserControls.ValidationTextbox"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:A2_Project.UserControls"
			 mc:Ignorable="d" 
			 d:DesignHeight="40"
			 Height="40">
	<StackPanel Orientation="Horizontal">
		<TextBox TextChanged="Tbx_TextChanged" Name="tbx" MinWidth="200" MaxWidth="250" FontSize="24" Background="{x:Null}" Foreground="#F1F1F1" CaretBrush="#D5D5D5" TextWrapping="Wrap"/>
		<Image x:Name="img" Source="/Resources/circle-invalid.png" Margin="10, 0, 0, 0" Height="40" Width="40"/>
	</StackPanel>
</UserControl>
